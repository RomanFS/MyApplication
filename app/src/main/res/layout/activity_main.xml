<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
            android:background="@color/colorPrimary" android:padding="8dp" tools:ignore="MissingConstraints"
            app:layout_constrainedWidth="false">
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="top|left" tools:ignore="RtlHardcoded"/>
        <TextView
                android:text="@string/myfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:textColor="#FFEB3B" android:textAlignment="center"
                android:layout_gravity="center_horizontal|center_vertical"/>
        <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_settings_black_24dp"
                android:id="@+id/button"
                android:textAlignment="center" android:layout_gravity="top|end"/>
    </FrameLayout>

    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:layout_above="@+id/bottom_navigation"
            android:layout_below="@+id/header">

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            app:menu="@menu/bottom_navigation"/>
</RelativeLayout>